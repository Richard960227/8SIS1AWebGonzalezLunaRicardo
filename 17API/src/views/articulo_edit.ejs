<%- include('partials/_header') %>

    <div class="hero min-h-screen bg-base-200">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <form action="/update/<%=data.id %>" method="POST">

                    <input type="checkbox" id="my-modal-3" class="modal-toggle" />
                    <div class="modal-box relative ">
                        <div class="form-control mt-5">
                            <input type="text" name="nombre" placeholder="<%=data.nombre %>"
                                class="input input-bordered" id="nombre" />
                        </div>
                        <div class="form-control mt-5">
                            <input type="number" name="precio" placeholder="<%=data.precio %>"
                                class="input input-bordered" id="precio" />
                        </div>
                        <div class="form-control mt-5">
                            <input type="number" name="stock" placeholder="<%=data.stock %>"
                                class="input input-bordered" id="stock" />
                        </div>
                        <div class="form-control mt-6">
                            <button class="btn btn-active btn-primary" type="submit">Editar Articulo</button>
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>



    <%- include('partials/_footer') %>